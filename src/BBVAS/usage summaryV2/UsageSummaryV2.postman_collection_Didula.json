{
	"info": {
		"_postman_id": "usage-summary-v2-collection",
		"name": "UsageSummaryV2 - TMF635 Usage Management API",
		"description": "Postman collection for UsageSummaryV2 endpoints following TMF635 v4.0.0 standards",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "usage-summary-v2"
	},
	"item": [
		{
			"name": "List Usage Summary Records",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/tmf-api/usageManagement/v4/usage?fields=id,href,status,usageType,usageDate&relatedParty.id={{subscriberID}}&usageDate={{usageDate}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tmf-api",
						"usageManagement",
						"v4",
						"usage"
					],
					"query": [
						{
							"key": "fields",
							"value": "id,href,status,usageType,usageDate",
							"description": "Comma-separated list of fields to return"
						},
						{
							"key": "relatedParty.id",
							"value": "{{subscriberID}}",
							"description": "Filter by subscriber ID"
						},
						{
							"key": "usageDate",
							"value": "{{usageDate}}",
							"description": "Filter by usage date (YYYY-MM-DD)"
						}
					]
				},
				"description": "List usage summary records with TMF635 filtering\n\nQuery Parameters:\n- fields: Comma-separated list of fields to return\n- relatedParty.id: Filter by subscriber ID\n- usageDate: Filter by specific date\n- usageType: Filter by usage type\n- status: Filter by status\n\nExample:\nGET /tmf-api/usageManagement/v4/usage?fields=id,href,status,usageType,usageDate&relatedParty.id=94112488102&usageDate=2024-01-15"
			},
			"response": []
		},
		{
			"name": "Get Usage Summary by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/tmf-api/usageManagement/v4/usage/{{usage_id}}?fields=id,href,ratedProductUsage,relatedParty",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tmf-api",
						"usageManagement",
						"v4",
						"usage",
						"{{usage_id}}"
					],
					"query": [
						{
							"key": "fields",
							"value": "id,href,ratedProductUsage,relatedParty",
							"description": "Comma-separated list of fields to return"
						}
					]
				},
				"description": "Get usage summary record by ID\n\nPath Parameters:\n- id: Usage record ID\n\nQuery Parameters:\n- fields: Comma-separated list of fields to return\n\nExample:\nGET /tmf-api/usageManagement/v4/usage/5130d5131a23?fields=id,href,ratedProductUsage,relatedParty"
			},
			"response": []
		},
		{
			"name": "Legacy Usage Summary by Subscriber",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/tmf-api/usageManagement/v4/usage?subscriberID={{subscriberID}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"tmf-api",
						"usageManagement",
						"v4",
						"usage"
					],
					"query": [
						{
							"key": "subscriberID",
							"value": "{{subscriberID}}",
							"description": "Subscriber ID (legacy parameter)"
						}
					]
				},
				"description": "Legacy endpoint for backward compatibility\n\nQuery Parameters:\n- subscriberID: Subscriber ID (required)\n\nExample:\nGET /tmf-api/usageManagement/v4/usage?subscriberID=94112488102"
			},
			"response": []
		}
	],
